generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  username   String   @unique @db.VarChar(255)
  password   String   @db.VarChar(255)

  session    Session?     @relation
  deliveries Deliveries[]

  @@map("users")
}

model Deliveries {
  id               Int      @id @default(autoincrement())
  created_at       DateTime @default(now())
  ended_at         DateTime?
  donor_name       String   @unique @db.VarChar(255)
  initial_address  String   @db.VarChar(255)
  final_address    String?  @db.VarChar(255)
  is_on_delivering Boolean  @default(false)

  user_id Int
  user    Users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("deliveries")
}

model Session {
  id            Int      @id @default(autoincrement())
  expires_in    DateTime
  refresh_token String   @unique @db.VarChar(255)

  user_id Int   @unique
  user    Users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())

  @@map("session")
}
